{
	"scripts": {
		"la:$command:$bail:$concurrency": {
			"condition": "'$bail'==='0'",
			"sequential-then": "lerna $command --concurrency $concurrency --no-bail --stream $*",
			"sequential-else": "lerna $command --concurrency $concurrency --stream $*"
		},
		"lc:$command:$concurrency=8": "lerna $command --concurrency $concurrency $*",
		"lr:$bail=0:$concurrency=8": "la:run:$bail:$concurrency $*",
		"le:$bail=0:$concurrency=8": "la:exec:$bail:$concurrency -- $*",
		"depcheck": "le depcheck --oneline",
		"purge": [
			"lr clean",
			"lc:clean -y",
			"shx rm -rf '**/node_modules' yarn.lock"
		],
		"clean:builds": "lr --no-private clean",
		"clean:modules": "lc:clean -y",
		"clean": {
			"concurrent": [
				"shx rm -rf '**/yarn-error.log'",
				"clean:builds",
				"clean:modules"
			]
		},
		"index": "lr index",
		"build": "lr build",
		"test": [
			"build",
			"jest --passWithNoTests --silent --noStackTrace --colors"
		],
		"prod": [
			"refresh",
			"lr:bail version"
		],
		"publish": [
			"refresh",
			"lc:publish:1 --no-private --ignore-prepublish $*"
		],
		"publish:$bump": [
			"refresh",
			"lc:publish:1 $bump -y --no-private --ignore-prepublish $*"
		],
		"refresh": [
			"clean",
			"lc:bootstrap"
		],
		"reset": [
			"purge",
			"yarn install --force",
			"lc:bootstrap"
		]
	},
	"options": {
		"logLevel": 0
	}
}
