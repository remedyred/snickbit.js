{
	"name": "snickbit",
	"version": "1.0.16",
	"description": "My personal npx business card",
	"license": "MIT",
	"main": "./bin/snickbit.js",
	"bin": {
		"snickbit": "./bin/snickbit"
	},
	"files": [
		"bin"
	],
	"scripts": {
		"build": "tsup --minify",
		"check": "pnpm run lint && pnpm run typecheck",
		"clean": "shx rm -rf ./dist",
		"depcheck": "depcheck",
		"dev": "tsup --watch",
		"release": "semantic-release",
		"start": "ts-node ./src/index.ts",
		"typecheck": "tsc --noEmit"
	},
	"release": {
		"extends": [
			"@snickbit/semantic-release"
		]
	},
	"dependencies": {
		"@snickbit/node-cli": "3.0.24",
		"@snickbit/node-utilities": "4.4.20",
		"@snickbit/out": "2.0.48",
		"ansi-styles-template": "1.0.0",
		"figlet": "1.5.2",
		"is-email": "1.0.2",
		"node-fetch": "3.3.0",
		"open": "8.4.0"
	},
	"devDependencies": {
		"shx": "0.3.4",
		"ts-node": "10.9.1",
		"tsup": "6.5.0",
		"typescript": "4.9.3"
	},
	"engines": {
		"node": ">= 14.17"
	},
	"preferGlobal": true,
	"tsup": {
		"entry": [
			"src/index.ts"
		],
		"clean": true,
		"format": [
			"cjs"
		]
	}
}
