{
	"name": "snickbit",
	"description": "My personal npx business card",
	"version": "0.0.11",
	"license": "MIT",
	"preferGlobal": true,
	"bin": {
		"snickbit": "./bin/snickbit.js"
	},
	"main": "./bin/snickbit.js",
	"files": [
		"bin"
	],
	"engines": {
		"node": ">= 12"
	},
	"scripts": {
		"start": "node bin/snickbit.js",
		"clean": "shx rm -rf ./dist",
		"build": "esbuild --bundle --outfile=bin/snickbit.js src/index.ts --target=node12 --platform=node",
		"build:meta": "yarpm run build --metafile",
		"prod": "yarpm run build --minify",
		"depcheck": "depcheck",
		"watch": "yarpm run build --watch"
	},
	"dependencies": {
		"@snickbit/node-cli": "^1.0.26",
		"@snickbit/node-utilities": "^4.2.25",
		"@snickbit/out": "^2.0.5",
		"ansi-styles-template": "^1.0.0",
		"figlet": "^1.5.2",
		"open": "^8.4.0"
	},
	"devDependencies": {
		"esbuild": "^0.14.38",
		"shx": "^0.3.4",
		"typescript": "^4.6.3"
	}
}
