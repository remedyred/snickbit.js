{
	"name": "snickbit",
	"description": "My personal npx business card",
	"version": "0.0.19",
	"license": "MIT",
	"preferGlobal": true,
	"bin": {
		"snickbit": "./bin/snickbit.js"
	},
	"main": "./bin/snickbit.js",
	"files": [
		"bin"
	],
	"engines": {
		"node": ">= 12"
	},
	"scripts": {
		"start": "node bin/snickbit.js",
		"clean": "shx rm -rf ./dist",
		"esbuild": "esbuild --bundle --outfile=bin/snickbit.js src/index.ts --target=node12 --platform=node",
		"build": "npm run esbuild",
		"build:meta": "npm run build -- --minify --metafile=.meta.json",
		"prod": "npm run build -- --minify",
		"depcheck": "depcheck",
		"dev": "npm run build -- --sourcemap",
		"watch": "npm run dev -- --watch"
	},
	"dependencies": {
		"@snickbit/node-cli": "^1.0.43",
		"@snickbit/node-utilities": "^4.3.3",
		"@snickbit/out": "^2.0.23",
		"ansi-styles-template": "^1.0.0",
		"figlet": "^1.5.2",
		"is-email": "^1.0.2",
		"node-fetch": "^3.2.4",
		"open": "^8.4.0"
	},
	"devDependencies": {
		"esbuild": "^0.14.38",
		"shx": "^0.3.4",
		"typescript": "^4.6.3"
	},
	"nx": {
		"implicitDependencies": [
			"@snickbit/node-cli",
			"@snickbit/node-utilities",
			"@snickbit/out"
		]
	}
}
