{
	"name": "snickbit",
	"version": "1.0.14",
	"description": "My personal npx business card",
	"license": "MIT",
	"main": "./bin/snickbit.js",
	"bin": {
		"snickbit": "./bin/snickbit"
	},
	"files": [
		"bin"
	],
	"scripts": {
		"build": "pnpm run bundle --minify",
		"build:meta": "pnpm run build --metafile=.meta.json",
		"bundle": "esbuild --bundle --outfile=bin/snickbit src/index.ts --target=node12 --platform=node",
		"clean": "shx rm -rf ./dist",
		"depcheck": "depcheck",
		"dev": "pnpm run build --sourcemap",
		"release": "semantic-release",
		"start": "node bin/snickbit.js",
		"watch": "pnpm run dev --watch"
	},
	"release": {
		"extends": [
			"semantic-release-monorepo",
			"@snickbit/semantic-release"
		]
	},
	"dependencies": {
		"@snickbit/node-cli": "3.0.24",
		"@snickbit/node-utilities": "4.4.9",
		"@snickbit/out": "2.0.45",
		"ansi-styles-template": "1.0.0",
		"figlet": "1.5.2",
		"is-email": "1.0.2",
		"node-fetch": "3.2.10",
		"open": "8.4.0"
	},
	"devDependencies": {
		"esbuild": "0.15.6",
		"shx": "0.3.4",
		"typescript": "4.8.4"
	},
	"engines": {
		"node": ">= 12"
	},
	"preferGlobal": true
}
