{
	"compilerOptions": {
		"declaration": true,
		"declarationMap": true,
		"removeComments": true,
		"target": "es2020",
		"moduleResolution": "node",
		"newLine": "lf",
		"module": "commonjs",
		"downlevelIteration": true,
		"sourceMap": true,
		"noImplicitAny": false,
		"noImplicitThis": false,
		"esModuleInterop": true
	},
	"typedocOptions": {
		"entryPoints": [
			"src/index.ts"
		],
		"out": "docs",
		"githubPages": false,
		"hideBreadcrumbs": true,
		"hideGenerator": true,
		"excludeProtected": true,
		"excludeInternal": true,
		"excludePrivate": true,
		"disableSources": true,
		"defaultCategory": "Modules",
		"readme": "none"
	}
}
