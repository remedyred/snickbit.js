{
	"name": "@snickbit/spinner",
	"version": "0.0.0",
	"description": "Minimal terminal spinner for Node.js",
	"license": "MIT",
	"exports": {
		"require": "./dist/index.js",
		"import": "./dist/index.mjs",
		"types": "./dist/index.d.ts"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup --minify",
		"clean": "shx rm -rf ./dist",
		"depcheck": "depcheck",
		"dev": "tsup",
		"docs": "typedoc src/index.ts --tsconfig ./tsconfig.typedoc.json",
		"release": "semantic-release",
		"types": "tsc --project ./tsconfig.types.json",
		"watch": "pnpm run dev --watch"
	},
	"release": {
		"extends": [
			"@snickbit/semantic-release"
		]
	},
	"dependencies": {
		"@snickbit/ansi": "^0.0.26",
		"@snickbit/utilities": "3.4.18",
		"cli-spinners": "^2.7.0",
		"kleur": "^4.1.5"
	},
	"devDependencies": {
		"@snickbit/indexer": "2.5.28",
		"@types/node": "18.11.9",
		"shx": "0.3.4",
		"tsup": "6.5.0",
		"typedoc": "0.23.21",
		"typedoc-plugin-markdown": "3.13.6",
		"typescript": "4.9.3"
	},
	"engines": {
		"node": ">= 14.17"
	}
}
