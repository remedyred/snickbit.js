{
	"name": "@snickbit/spinner",
	"version": "1.3.5",
	"description": "Minimal terminal spinner for Node.js",
	"license": "MIT",
	"exports": {
		"require": "./dist/index.js",
		"import": "./dist/index.mjs",
		"types": "./dist/index.d.ts"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup --minify --dts",
		"check": "pnpm -w run lint && pnpm run typecheck",
		"depcheck": "depcheck",
		"dev": "tsup --sourcemap",
		"docs": "typedoc src/index.ts",
		"release": "semantic-release",
		"start": "tsx example/index.ts",
		"typecheck": "tsc --noEmit"
	},
	"release": {
		"extends": [
			"@snickbit/semantic-release"
		]
	},
	"dependencies": {
		"@snickbit/ansi": "^0.0.26",
		"@snickbit/utilities": "3.11.4",
		"cli-spinners": "^2.9.0",
		"kleur": "^4.1.5"
	},
	"devDependencies": {
		"@snickbit/indexer": "2.9.1",
		"@types/node": "20.4.2",
		"tsup": "7.1.0",
		"tsx": "3.12.7",
		"typedoc": "0.24.8",
		"typedoc-plugin-markdown": "3.15.3",
		"typescript": "5.1.6"
	},
	"engines": {
		"node": ">= 14.17"
	}
}
