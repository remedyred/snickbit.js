{
	"name": "@snickbit/spinner",
	"version": "1.3.0",
	"description": "Minimal terminal spinner for Node.js",
	"license": "MIT",
	"exports": {
		"require": "./dist/index.js",
		"import": "./dist/index.mjs",
		"types": "./dist/index.d.ts"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup --minify --dts",
		"clean": "shx rm -rf ./dist",
		"depcheck": "depcheck",
		"dev": "tsup --sourcemap",
		"docs": "typedoc src/index.ts --tsconfig ./tsconfig.typedoc.json",
		"release": "semantic-release",
		"types": "tsc --project ./tsconfig.types.json",
		"watch": "pnpm run dev --watch",
		"start": "tsx example/index.ts"
	},
	"release": {
		"extends": [
			"@snickbit/semantic-release"
		]
	},
	"dependencies": {
		"@snickbit/ansi": "^0.0.26",
		"@snickbit/utilities": "^3.5.0",
		"cli-spinners": "^2.7.0",
		"kleur": "^4.1.5"
	},
	"devDependencies": {
		"@snickbit/indexer": "^2.5.28",
		"@types/node": "18.16.14",
		"shx": "0.3.4",
		"tsup": "6.7.0",
		"tsx": "3.12.7",
		"typedoc": "0.24.7",
		"typedoc-plugin-markdown": "3.15.3",
		"typescript": "4.9.5"
	},
	"engines": {
		"node": ">= 14.17"
	}
}
