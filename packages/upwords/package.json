{
	"name": "@snickbit/upwords",
	"description": "Helper function to convert a string to title case, attempting to preserve acronyms and special case words.",
	"version": "2.0.9",
	"license": "MIT",
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"exports": {
		"require": "./dist/index.js",
		"import": "./dist/index.mjs",
		"types": "./dist/index.d.ts"
	},
	"engines": {
		"node": ">= 12"
	},
	"scripts": {
		"clean": "shx rm -rf ./dist",
		"test": "jest",
		"build": "tsup",
		"build:meta": "yarpm run build --metafile",
		"prod": "yarpm run build --minify",
		"depcheck": "depcheck",
		"watch": "yarpm run build --watch"
	},
	"devDependencies": {
		"@babel/core": "^7.17.9",
		"@babel/preset-env": "^7.16.11",
		"babel-jest": "^27.5.1",
		"babel-plugin-add-module-exports": "^1.0.4",
		"jest": "^27.5.1",
		"shx": "^0.3.4",
		"tsup": "^5.12.6"
	},
	"jest": {
		"testEnvironment": "node"
	},
	"tsup": {
		"entry": [
			"src/index.js"
		],
		"clean": true,
		"dts": true,
		"format": [
			"esm",
			"cjs"
		]
	}
}
