{
	"name": "@snickbit/upwords",
	"version": "2.0.20",
	"description": "Helper function to convert a string to title case, attempting to preserve acronyms and special case words.",
	"license": "MIT",
	"exports": {
		"require": "./dist/index.js",
		"import": "./dist/index.mjs",
		"types": "./dist/index.d.ts"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup",
		"clean": "shx rm -rf ./dist",
		"depcheck": "depcheck",
		"dev": "pnpm run build --sourcemap",
		"meta": "pnpm run prod --metafile",
		"prod": "pnpm run build --minify",
		"test": "jest",
		"watch": "pnpm run dev --watch"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node"
	},
	"devDependencies": {
		"@types/jest": "^27.5.2",
		"jest": "^28.1.0",
		"shx": "^0.3.4",
		"ts-jest": "^28.0.3",
		"tsup": "^6.0.1",
		"typescript": "^4.7.2"
	},
	"engines": {
		"node": ">= 12"
	},
	"tsup": {
		"entry": [
			"src/index.ts"
		],
		"clean": true,
		"dts": true,
		"format": [
			"esm",
			"cjs"
		]
	}
}
