{
	"name": "@snickbit/out",
	"description": "Cross-platform pretty output for your terminal or browser console.",
	"version": "2.0.4",
	"license": "MIT",
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"exports": {
		"require": "./dist/index.js",
		"import": "./dist/index.mjs",
		"types": "./dist/index.d.ts"
	},
	"engines": {
		"node": ">= 12"
	},
	"scripts": {
		"start": "node ./examples/node.js",
		"clean": "shx rm -rf ./dist",
		"test": "jest",
		"build": "tsup",
		"build:meta": "yarn build --metafile",
		"prod": "yarn build --minify",
		"watch": "yarn build --watch",
		"docs": "typedoc && shx mv docs/classes/Out.md DOCS.md && shx rm -rf docs"
	},
	"dependencies": {
		"@snickbit/cycle": "^0.0.3",
		"@snickbit/utilities": "^3.0.3",
		"ansi-styles-template": "^1.0.0",
		"browser-or-node": "^2.0.0",
		"chalk": "^4.1.2",
		"node-inspect-extracted": "^1.1.0",
		"picomatch-browser": "^2.2.6",
		"strip-ansi": "^6.0.1"
	},
	"devDependencies": {
		"@types/jest": "^27.4.1",
		"jest": "^27.5.1",
		"shx": "^0.3.4",
		"ts-jest": "^27.1.4",
		"tsup": "^5.12.6",
		"typedoc": "^0.22.15",
		"typedoc-plugin-markdown": "^3.12.0",
		"typedoc-plugin-no-inherit": "^1.3.1",
		"typescript": "^4.6.3"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node"
	},
	"tsup": {
		"entry": [
			"src/index.ts"
		],
		"clean": true,
		"dts": true,
		"format": [
			"esm",
			"cjs"
		]
	}
}
