{
	"name": "@snickbit/state",
	"version": "1.0.3",
	"description": "Simple state management for TypeScript",
	"license": "MIT",
	"exports": {
		"require": "./dist/index.js",
		"import": "./dist/index.mjs",
		"types": "./dist/index.d.ts"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup --minify",
		"clean": "shx rm -rf ./dist",
		"dev": "tsup",
		"docs": "typedoc src/index.ts --tsconfig ./tsconfig.typedoc.json",
		"release": "semantic-release",
		"types": "tsc --project ./tsconfig.types.json",
		"watch": "pnpm run dev --watch"
	},
	"release": {
		"extends": [
			"@snickbit/semantic-release"
		]
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node"
	},
	"dependencies": {
		"@snickbit/utilities": "3.5.0",
		"mitt": "3.0.0"
	},
	"devDependencies": {
		"@types/jest": "29.4.0",
		"jest": "29.4.3",
		"shx": "0.3.4",
		"ts-jest": "29.0.5",
		"tsup": "6.6.3",
		"typedoc": "0.23.26",
		"typedoc-plugin-markdown": "3.14.0",
		"typescript": "4.9.5"
	},
	"engines": {
		"node": ">= 12"
	}
}
