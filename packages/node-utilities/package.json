{
	"name": "@snickbit/node-utilities",
	"version": "4.4.0",
	"description": "A collection of simple Node.js helpers",
	"license": "MIT",
	"exports": {
		"require": "./dist/index.js",
		"import": "./dist/index.mjs",
		"types": "./dist/index.d.ts"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup",
		"clean": "shx rm -rf ./dist",
		"depcheck": "depcheck",
		"dev": "pnpm run build --sourcemap",
		"docs": "typedoc",
		"meta": "pnpm run prod --metafile",
		"prod": "pnpm run build --minify",
		"watch": "pnpm run dev --watch"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node"
	},
	"dependencies": {
		"@snickbit/out": "^2.0.36",
		"@snickbit/utilities": "^3.1.0",
		"ansi-styles-template": "^1.0.0",
		"cli-progress": "^3.11.1",
		"is-wsl": "^2.2.0",
		"lodash.throttle": "^4.1.1",
		"nanospinner": "^1.1.0",
		"prompts": "^2.4.2"
	},
	"devDependencies": {
		"@types/jest": "^28.1.3",
		"@types/node": "^18.0.0",
		"jest": "^28.1.1",
		"shx": "^0.3.4",
		"ts-jest": "^28.0.5",
		"tsup": "^6.1.2",
		"typedoc": "^0.22.17",
		"typedoc-plugin-markdown": "^3.12.1",
		"typescript": "^4.7.4"
	},
	"engines": {
		"node": ">= 12"
	},
	"tsup": {
		"entry": [
			"src/index.ts"
		],
		"clean": true,
		"dts": true,
		"format": [
			"esm",
			"cjs"
		]
	}
}
