{
	"name": "@snickbit/node-utilities",
	"version": "4.4.11",
	"description": "A collection of simple Node.js helpers",
	"license": "MIT",
	"exports": {
		"require": "./dist/index.js",
		"import": "./dist/index.mjs",
		"types": "./dist/index.d.ts"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "pnpm run build:lib && pnpm run build:types",
		"build:lib": "tsup --minify",
		"build:types": "tsc --project ./tsconfig.types.json --declarationDir dist",
		"clean": "shx rm -rf ./dist ./.types",
		"depcheck": "depcheck",
		"dev": "tsup",
		"dev:types": "tsc --emitDeclarationOnly --declarationMap --declarationDir .types",
		"docs": "typedoc src/index.ts --tsconfig ./tsconfig.typedoc.json",
		"release": "semantic-release",
		"watch": "pnpm run dev --watch"
	},
	"release": {
		"extends": [
			"semantic-release-monorepo",
			"@snickbit/semantic-release"
		]
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node"
	},
	"dependencies": {
		"@snickbit/out": "^2.0.37",
		"@snickbit/utilities": "^3.4.0",
		"ansi-styles-template": "^1.0.0",
		"cli-progress": "^3.11.1",
		"is-wsl": "^2.2.0",
		"lodash.throttle": "^4.1.1",
		"nanospinner": "^1.1.0",
		"prompts": "^2.4.2"
	},
	"devDependencies": {
		"@types/jest": "28.1.8",
		"@types/node": "18.6.4",
		"jest": "28.1.3",
		"shx": "0.3.4",
		"ts-jest": "28.0.8",
		"tsup": "6.2.3",
		"typedoc": "0.23.12",
		"typedoc-plugin-markdown": "3.13.6",
		"typescript": "4.8.3"
	},
	"engines": {
		"node": ">= 12"
	}
}
