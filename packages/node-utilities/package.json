{
	"name": "@snickbit/node-utilities",
	"version": "4.7.0",
	"description": "A collection of simple Node.js helpers",
	"license": "MIT",
	"exports": {
		"require": "./dist/index.js",
		"import": "./dist/index.mjs",
		"types": "./dist/index.d.ts"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup --minify",
		"clean": "shx rm -rf ./dist",
		"dev": "tsup",
		"docs": "typedoc src/index.ts --tsconfig ./tsconfig.typedoc.json",
		"release": "semantic-release",
		"types": "tsc --project ./tsconfig.types.json",
		"watch": "pnpm run dev --watch"
	},
	"release": {
		"extends": [
			"@snickbit/semantic-release"
		]
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node"
	},
	"dependencies": {
		"@snickbit/out": "2.0.48",
		"@snickbit/utilities": "3.4.20",
		"ansi-styles-template": "^1.0.0",
		"cli-progress": "3.12.0",
		"is-wsl": "^2.2.0",
		"lodash.throttle": "^4.1.1",
		"nanospinner": "^1.1.0",
		"prompts": "^2.4.2"
	},
	"devDependencies": {
		"@types/jest": "29.4.0",
		"@types/node": "18.14.4",
		"jest": "29.4.3",
		"shx": "0.3.4",
		"ts-jest": "29.0.5",
		"tsup": "6.6.3",
		"typedoc": "0.23.26",
		"typedoc-plugin-markdown": "3.14.0",
		"typescript": "4.9.5"
	},
	"engines": {
		"node": ">= 14.17"
	}
}
