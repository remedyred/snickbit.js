{
	"name": "@snickbit/node-utilities",
	"version": "4.2.18",
	"description": "A collection of simple Node.js helpers",
	"license": "MIT",
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"exports": {
		"require": "./dist/index.js",
		"import": "./dist/index.mjs",
		"types": "./dist/index.d.ts"
	},
	"engines": {
		"node": ">= 12"
	},
	"scripts": {
		"clean": "shx rm -rf ./dist",
		"test": "jest",
		"build": "tsup",
		"build:meta": "yarn build --metafile",
		"prod": "yarn build --minify",
		"watch": "yarn build --watch",
		"docs": "typedoc && shx mv docs/README.md DOCS.md && shx rm -rf docs"
	},
	"dependencies": {
		"@snickbit/out": "^2.0.1",
		"@snickbit/utilities": "^3.0.1",
		"ansi-styles-template": "^1.0.0",
		"cli-progress": "^3.10.0",
		"is-wsl": "^2.2.0",
		"lodash.throttle": "^4.1.1",
		"nanospinner": "^1.1.0",
		"prompts": "^2.4.2",
		"validator": "^13.7.0"
	},
	"devDependencies": {
		"@types/jest": "^27.4.1",
		"jest": "^27.5.1",
		"shx": "^0.3.4",
		"ts-jest": "^27.1.4",
		"tsup": "^5.12.6",
		"typedoc": "^0.22.15",
		"typedoc-plugin-markdown": "^3.12.0",
		"typescript": "^4.6.3"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node"
	},
	"tsup": {
		"entry": [
			"src/index.ts"
		],
		"clean": true,
		"dts": true,
		"format": [
			"esm",
			"cjs"
		]
	}
}
