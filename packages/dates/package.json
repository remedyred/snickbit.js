{
	"name": "@snickbit/dates",
	"version": "1.0.55",
	"description": "Extended Date and Time functionality for Dayjs",
	"license": "MIT",
	"exports": {
		"require": "./dist/index.js",
		"import": "./dist/index.mjs",
		"types": "./dist/index.d.ts"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup --minify",
		"build:types": "tsc --emitDeclarationOnly --declarationDir dist",
		"clean": "shx rm -rf ./dist ./.types",
		"depcheck": "depcheck",
		"dev": "tsup",
		"dev:types": "tsc --emitDeclarationOnly --declarationMap --declarationDir .types",
		"docs": "typedoc",
		"meta": "tsup --minify --metafile",
		"release": "semantic-release --dry-run",
		"test": "jest",
		"watch": "pnpm run dev --watch"
	},
	"release": {
		"extends": [
			"semantic-release-monorepo",
			"@snickbit/semantic-release"
		]
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node"
	},
	"dependencies": {
		"@snickbit/utilities": "^3.4.0",
		"dayjs": "^1.11.3"
	},
	"devDependencies": {
		"@types/jest": "28.1.8",
		"jest": "28.1.3",
		"shx": "0.3.4",
		"ts-jest": "28.0.8",
		"tsup": "6.2.2",
		"typedoc": "0.23.10",
		"typedoc-plugin-markdown": "3.13.4",
		"typescript": "4.7.4"
	},
	"engines": {
		"node": ">= 12"
	}
}
