{
	"name": "@snickbit/cycle",
	"version": "0.0.0",
	"description": "Helper function and class to cycle through an array of values",
	"homepage": "https://github.com/snickbit/snickbit.js",
	"license": "MIT",
	"main": "./dist/index.js",
	"module": "./lib/index.js",
	"types": "./types/index.d.ts",
	"directories": {
		"lib": "lib",
		"dist": "dist",
		"types": "types",
		"test": "__tests__"
	},
	"files": [
		"lib",
		"dist",
		"types"
	],
	"exports": {
		".": {
			"require": "./dist/index.js",
			"import": "./lib/index.js"
		},
		"./*": {
			"require": "./dist/*.js",
			"import": "./lib/*.js"
		}
	},
	"scripts": {
		"clean": "shx rm -rf lib dist types",
		"docs": "typedoc --tsconfig ./tsconfig.json && shx mv docs/README.md DOCS.md && shx rm -rf docs",
		"build": "concurrently -n esm,cjs \"yarn build:esm\" \"yarn build:cjs\"",
		"build:esm": "tsc --module es6 --target es6 --outDir lib --declaration --declarationDir types",
		"build:cjs": "tsc --module commonjs --target es5 --outDir dist",
		"watch": "yarn build:cjs --watch",
		"test": "jest",
		"version": "yarn clean && yarn build && yarn docs"
	},
	"dependencies": {
		"@snickbit/utilities": "^3.0.1",
		"typedoc": "^0.22.15",
		"typedoc-plugin-markdown": "^3.12.0"
	},
	"devDependencies": {
		"@types/jest": "^27.4.1",
		"@types/node": "^17.0.25",
		"concurrently": "^7.1.0",
		"esbuild": "^0.14.37",
		"jest": "^27.5.1",
		"shx": "^0.3.4",
		"ts-jest": "^27.1.4",
		"typedoc": "^0.22.15",
		"typedoc-plugin-markdown": "^3.12.0"
	}
}
