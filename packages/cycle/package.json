{
	"name": "@snickbit/cycle",
	"version": "0.0.16",
	"description": "Helper function and class to cycle through an array of values",
	"license": "MIT",
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"exports": {
		"require": "./dist/index.js",
		"import": "./dist/index.mjs",
		"types": "./dist/index.d.ts"
	},
	"engines": {
		"node": ">= 12"
	},
	"scripts": {
		"start": "node ./examples/index.js",
		"clean": "shx rm -rf ./dist",
		"test": "jest",
		"docs": "typedoc",
		"depcheck": "depcheck",
		"build": "tsup",
		"meta": "npm run prod -- --metafile",
		"prod": "npm run build -- --minify",
		"watch": "npm run build -- --watch"
	},
	"dependencies": {
		"@snickbit/utilities": "^3.0.16"
	},
	"devDependencies": {
		"@types/jest": "^27.4.1",
		"jest": "^27.5.1",
		"shx": "^0.3.4",
		"ts-jest": "^27.1.4",
		"tsup": "^5.12.6",
		"typedoc": "^0.22.15",
		"typedoc-plugin-markdown": "^3.12.0",
		"typescript": "^4.6.3"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node"
	},
	"tsup": {
		"entry": [
			"src/index.ts"
		],
		"clean": true,
		"dts": true,
		"format": [
			"esm",
			"cjs"
		]
	},
	"nx": {
		"implicitDependencies": [
			"@snickbit/utilities"
		]
	}
}
