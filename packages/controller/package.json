{
	"name": "@snickbit/controller",
	"version": "0.0.1",
	"description": "Minimal state management using an extendable controller class",
	"license": "MIT",
	"exports": {
		"require": "./dist/index.js",
		"import": "./dist/index.mjs",
		"types": "./dist/index.d.ts"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup",
		"clean": "shx rm -rf ./dist ",
		"depcheck": "depcheck",
		"docs": "typedoc",
		"meta": "pnpm run prod --metafile",
		"prod": "pnpm run clean && npm run build --minify",
		"test": "jest",
		"watch": "npm run build --watch"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node"
	},
	"dependencies": {
		"@snickbit/utilities": "latest",
		"mitt": "^3.0.0"
	},
	"devDependencies": {
		"@types/jest": "^27.4.1",
		"jest": "^27.5.1",
		"shx": "^0.3.4",
		"ts-jest": "^27.1.4",
		"tsup": "^5.12.6",
		"typedoc": "^0.22.15",
		"typedoc-plugin-markdown": "^3.12.0",
		"typescript": "^4.6.3"
	},
	"engines": {
		"node": ">= 12"
	},
	"tsup": {
		"entry": [
			"src/index.ts"
		],
		"clean": true,
		"dts": true,
		"format": [
			"esm",
			"cjs"
		]
	}
}
