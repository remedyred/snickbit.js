{
	"name": "@snickbit/controller",
	"version": "1.0.0",
	"description": "Minimal state management using an extendable controller class",
	"license": "MIT",
	"exports": {
		"require": "./dist/index.js",
		"import": "./dist/index.mjs",
		"types": "./dist/index.d.ts"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup --minify",
		"clean": "shx rm -rf ./dist",
		"dev": "tsup",
		"docs": "typedoc src/index.ts --tsconfig ./tsconfig.typedoc.json",
		"release": "semantic-release",
		"types": "tsc --project ./tsconfig.types.json",
		"watch": "pnpm run dev --watch"
	},
	"release": {
		"extends": [
			"@snickbit/semantic-release"
		]
	},
	"dependencies": {
		"@snickbit/utilities": "3.4.18",
		"mitt": "~3.0.0"
	},
	"devDependencies": {
		"shx": "0.3.4",
		"tsup": "6.5.0",
		"typedoc": "0.23.21",
		"typedoc-plugin-markdown": "3.14.0",
		"typescript": "4.9.3"
	},
	"engines": {
		"node": ">= 14.17"
	}
}
