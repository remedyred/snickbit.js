{
	"name": "@snickbit/controller",
	"version": "0.0.11",
	"description": "Minimal state management using an extendable controller class",
	"license": "MIT",
	"exports": {
		"require": "./dist/index.js",
		"import": "./dist/index.mjs",
		"types": "./dist/index.d.ts"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup --minify --dts",
		"build:types": "tsc --emitDeclarationOnly --declarationDir dist",
		"clean": "shx rm -rf ./dist ",
		"dev": "tsup",
		"dev:types": "tsc --emitDeclarationOnly --declarationMap --declarationDir .types",
		"docs": "typedoc",
		"test": "jest",
		"watch": "concurrently -k -c magenta,cyan pnpm:watch:*",
		"watch:dev": "pnpm run dev --watch",
		"watch:types": "pnpm run dev:types --watch"
	},
	"jest": {
		"onlyChanged": true,
		"preset": "ts-jest",
		"testEnvironment": "node"
	},
	"dependencies": {
		"@snickbit/utilities": "~3.4.0",
		"mitt": "~3.0.0"
	},
	"devDependencies": {
		"@snickbit/eslint-config": "1.3.2",
		"@types/jest": "28.1.8",
		"concurrently": "7.3.0",
		"eslint": "8.22.0",
		"jest": "28.1.3",
		"shx": "0.3.4",
		"ts-jest": "28.0.8",
		"tsup": "6.2.3",
		"typedoc": "0.23.11",
		"typedoc-plugin-markdown": "3.13.4",
		"typescript": "4.8.2"
	},
	"engines": {
		"node": ">= 12"
	},
	"tsup": {
		"entry": [
			"src/index.ts"
		],
		"clean": true,
		"format": [
			"esm",
			"cjs"
		]
	}
}
