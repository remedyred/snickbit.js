{
	"name": "@snickbit/controller",
	"version": "1.0.11",
	"description": "Minimal state management using an extendable controller class",
	"license": "MIT",
	"exports": {
		"require": "./dist/index.js",
		"import": "./dist/index.mjs",
		"types": "./dist/index.d.ts"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup --minify",
		"clean": "shx rm -rf ./dist",
		"dev": "tsup",
		"docs": "typedoc src/index.ts --tsconfig ./tsconfig.typedoc.json",
		"release": "semantic-release",
		"types": "tsc --project ./tsconfig.types.json",
		"watch": "pnpm run dev --watch"
	},
	"release": {
		"extends": [
			"@snickbit/semantic-release"
		]
	},
	"dependencies": {
		"@snickbit/utilities": "^3.5.0",
		"mitt": "~3.0.0"
	},
	"devDependencies": {
		"shx": "0.3.4",
		"tsup": "6.7.0",
		"typedoc": "0.24.7",
		"typedoc-plugin-markdown": "3.15.3",
		"typescript": "4.9.5"
	},
	"engines": {
		"node": ">= 14.17"
	}
}
