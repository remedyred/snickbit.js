{
	"$schema": "https://turborepo.org/schema.json",
	"pipeline": {
		"build": {
			"inputs": [
				"src/**",
				"*.json",
				"../../tsup.config.json"
			],
			"dependsOn": ["^clean", "^build"],
			"outputs": ["dist/**"],
			"outputMode": "new-only"
		},
		"dev": {
			"inputs": [
				"src/**",
				"*.json",
				"../../tsup.config.json"
			],
			"dependsOn": ["^dev"],
			"outputs": ["dist/**"],
			"outputMode": "new-only"
		},
		"docs": {
			"dependsOn": ["build"],
			"outputs": ["docs/**", "README.md"],
			"inputs": ["src/**/*.tsx", "src/**/*.ts", "typedoc.json"]
		},
		"//#build": {
			"dependsOn": ["^build"],
			"outputs": []
		},
		"//#test": {
			"dependsOn": ["build"],
			"outputs": []
		},
		"//#lint": {
			"outputs": []
		},
		"//#lint:fix": {
			"outputs": ["**/*.ts", "**/*.json"],
			"outputMode": "new-only"
		},
		"//#docs": {
			"outputs": ["README.md"]
		},
		"clean": {
			"inputs": ["dist/**"],
			"outputs": []
		},
		"release": {
			"dependsOn": ["build", "//#lint", "//#test"],
			"outputs": ["CHANGELOG.md", "package.json", "docs/**", "README.md"]
		},
		"//#release:ci": {
			"env": ["GITHUB_TOKEN", "NPM_TOKEN"],
			"dependsOn": ["build"],
			"outputs": ["CHANGELOG.md", "package.json", "docs/**", "README.md"],
			"outputMode": "new-only"
		}
	}
}
