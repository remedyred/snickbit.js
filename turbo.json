{
	"$schema": "https://turborepo.org/schema.json",
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"],
			"outputMode": "new-only"
		},
		"docs": {
			"dependsOn": ["^build"],
			"outputs": ["docs/**", "README.md"],
			"inputs": ["src/**/*.tsx", "src/**/*.ts", "typedoc.json"]
		},
		"//#test": {
			"dependsOn": ["@snickbit/utilities#build", "^build"],
			"outputs": []
		},
		"//#lint": {
			"outputs": []
		},
		"//#fix": {
			"outputs": ["**/*.ts", "**/*.json"],
			"outputMode": "new-only"
		},
		"//#readmes": {
			"dependsOn": ["docs"],
			"outputs": ["README.md"]
		},
		"depcheck": {
			"inputs": ["package.json"],
			"outputs": []
		},
		"clean": {
			"outputs": []
		},
		"release": {
			"dependsOn": ["^build", "//#lint", "//#test"],
			"outputs": ["CHANGELOG.md", "package.json", "docs/**", "README.md"]
		},
		"//#release:ci": {
			"dependsOn": ["$GITHUB_TOKEN", "$NPM_TOKEN"],
			"outputs": ["CHANGELOG.md", "package.json", "docs/**", "README.md"],
			"outputMode": "new-only"
		}
	}
}
