{
	"name": "root",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"ci": "tsx ./scripts/src/index.ts",
		"lint": "eslint \"**/*.{ts,json,yml,yaml}\" --cache --color",
		"lint:fix": "pnpm run lint --fix",
		"prepare": "husky install",
		"pr": "pnpm run ci pr",
		"release": "pnpm run ci release",
		"release:ci": "multi-semantic-release --deps.bump=satisfy --ignore-private-packages",
		"test": "jest --no-cache"
	},
	"lint-staged": {
		"*.{ts,json,yml,yaml}": "eslint --fix --cache"
	},
	"jest": {
		"noStackTrace": true,
		"passWithNoTests": true,
		"preset": "ts-jest",
		"silent": true,
		"testEnvironment": "node"
	},
	"devDependencies": {
		"@snickbit/eslint-config": "1.5.3",
		"@snickbit/readmes": "0.0.28",
		"@snickbit/semantic-release": "1.6.6",
		"eslint": "8.45.0",
		"husky": "8.0.3",
		"jest": "29.6.1",
		"lint-staged": "13.2.3",
		"multi-semantic-release": "3.0.2",
		"semantic-release": "20.1.3",
		"ts-jest": "29.1.1",
		"tsx": "3.12.7",
		"typescript": "5.1.6"
	},
	"engines": {
		"node": ">= 14.17"
	},
	"readmes": {
		"packages": [
			"packages/*",
			"clis/*"
		],
		"repo": "snickbit/snickbit.js",
		"renameCategories": {
			"packages": "libraries"
		}
	}
}
