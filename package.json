{
	"name": "root",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"build": "turbo run build",
		"clean": "pnpm run clean:builds && pnpm run clean:modules",
		"clean:builds": "turbo run clean",
		"clean:modules": "shx rm -rf **/node_modules",
		"depcheck": "turbo run depcheck",
		"dev": "turbo run dev",
		"fix": "eslint **/*.{ts,json} --cache --color --fix",
		"index": "turbo run index",
		"lint": "eslint **/*.{ts,json} --cache --color",
		"readmes": "readmes",
		"prerelease": "turbo run prod test docs readmes fix depcheck",
		"release": "pnpm run prerelease && lerna publish",
		"test": "pnpm jest"
	},
	"jest": {
		"noStackTrace": true,
		"passWithNoTests": true,
		"preset": "ts-jest",
		"silent": true,
		"testEnvironment": "node"
	},
	"devDependencies": {
		"@lerna-lite/cli": "1.10.0",
		"@snickbit/eslint-config": "0.0.7",
		"@snickbit/readmes": "0.0.2",
		"@types/jest": "28.1.6",
		"@typescript-eslint/eslint-plugin": "5.33.0",
		"depcheck": "1.4.3",
		"eslint": "8.21.0",
		"eslint-plugin-beautiful-sort": "2.0.3",
		"eslint-plugin-json-files": "1.3.0",
		"eslint-plugin-sort-class-members": "1.14.1",
		"jest": "28.1.3",
		"shx": "0.3.4",
		"ts-jest": "28.0.7",
		"turbo": "1.4.3",
		"typescript": "4.7.4"
	},
	"engines": {
		"node": ">= 12"
	},
	"readmes": {
		"packages": [
			"packages/*",
			"clis/*"
		],
		"repo": "snickbit/snickbit.js",
		"renameCategories": {
			"packages": "libraries"
		}
	}
}
