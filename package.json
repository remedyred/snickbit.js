{
	"name": "root",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"check": "turbo run build //#lint //#test",
		"clean": "pnpm run clean:builds && pnpm run clean:modules",
		"clean:builds": "turbo run clean",
		"clean:modules": "shx rm -rf **/node_modules",
		"depcheck": "turbo run depcheck",
		"dev": "turbo run dev",
		"docs": "readmes",
		"fix": "eslint \"**/*.{ts,json,yml,yaml}\" --cache --color --fix",
		"index": "turbo run index",
		"lint": "eslint \"**/*.{ts,json,yml,yaml}\" --cache --color",
		"prepare": "husky install",
		"prerelease": "turbo run build docs //#fix //#test depcheck",
		"release": "turbo run release",
		"release:ci": "turbo run release --concurrency=1",
		"test": "jest"
	},
	"lint-staged": {
		"*.{ts,json,yml,yaml}": "eslint --fix --cache"
	},
	"jest": {
		"noStackTrace": true,
		"passWithNoTests": true,
		"preset": "ts-jest",
		"silent": true,
		"testEnvironment": "node"
	},
	"devDependencies": {
		"@lerna-lite/cli": "1.10.0",
		"@semantic-release/exec": "^6.0.3",
		"@snickbit/eslint-config": "1.1.0",
		"@snickbit/readmes": "0.0.2",
		"@snickbit/semantic-release": "^1.1.1",
		"@types/jest": "28.1.6",
		"depcheck": "1.4.3",
		"eslint": "8.21.0",
		"husky": "^8.0.0",
		"jest": "28.1.3",
		"lint-staged": "^13.0.3",
		"semantic-release": "19.0.3",
		"semantic-release-monorepo": "^7.0.5",
		"shx": "0.3.4",
		"ts-jest": "28.0.7",
		"turbo": "1.4.3",
		"typescript": "4.7.4"
	},
	"engines": {
		"node": ">= 12"
	},
	"readmes": {
		"packages": [
			"packages/*",
			"clis/*"
		],
		"repo": "snickbit/snickbit.js",
		"renameCategories": {
			"packages": "libraries"
		}
	}
}
