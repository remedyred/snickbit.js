{
	"name": "root",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"check": "turbo run build //#lint //#test",
		"clean": "pnpm run clean:builds && pnpm run clean:modules",
		"clean:builds": "turbo run clean",
		"clean:modules": "shx rm -rf **/node_modules",
		"depcheck": "turbo run depcheck",
		"dev": "turbo run dev",
		"docs": "readmes",
		"fix": "eslint \"**/*.{ts,json,yml,yaml}\" --cache --color --fix",
		"index": "turbo run index",
		"lint": "eslint \"**/*.{ts,json,yml,yaml}\" --cache --color",
		"prepare": "husky install",
		"prerelease": "turbo run build docs ///#fix ///#test depcheck",
		"release": "turbo run release",
		"release:ci": "turbo run release --concurrency=1",
		"test": "jest"
	},
	"lint-staged": {
		"*.{ts,json,yml,yaml}": "eslint --fix --cache"
	},
	"jest": {
		"noStackTrace": true,
		"onlyChanged": true,
		"passWithNoTests": true,
		"preset": "ts-jest",
		"silent": true,
		"testEnvironment": "node"
	},
	"devDependencies": {
		"@lerna-lite/cli": "1.11.1",
		"@semantic-release/exec": "6.0.3",
		"@snickbit/eslint-config": "1.3.4",
		"@snickbit/readmes": "0.0.9",
		"@snickbit/semantic-release": "^1.5.0",
		"@types/jest": "28.1.8",
		"concurrently": "^7.4.0",
		"depcheck": "1.4.3",
		"eslint": "8.23.0",
		"execa": "6.1.0",
		"husky": "8.0.1",
		"jest": "28.1.3",
		"lint-staged": "13.0.3",
		"semantic-release": "19.0.5",
		"semantic-release-monorepo": "7.0.5",
		"shx": "0.3.4",
		"ts-jest": "28.0.8",
		"tsup": "6.2.3",
		"turbo": "1.4.3",
		"typescript": "4.8.3"
	},
	"engines": {
		"node": ">= 12"
	},
	"readmes": {
		"packages": [
			"packages/*",
			"clis/*"
		],
		"repo": "snickbit/snickbit.js",
		"renameCategories": {
			"packages": "libraries"
		}
	}
}
