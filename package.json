{
	"name": "root",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"ci:docs": "pnpm -r run --parallel --if-present docs && readmes",
		"ci:index": "pnpm -r run --parallel --if-present index",
		"ci:check": "pnpm run test --ci && pnpm -r run --parallel --if-present typecheck",
		"ci:lint": "pnpm run lint:fix",
		"ci:test": "pnpm run test --ci",
		"ci:build": "pnpm -r run build",
		"lint": "eslint \"**/*.{ts,json,yml,yaml}\" --cache --color",
		"lint:fix": "pnpm run lint --fix",
		"prepare": "husky install",
		"prerelease": "pnpm run ci:lint && pnpm run ci:build && pnpm run ci:check && pnpm run ci:docs",
		"release": "pnpm -r run --parallel --if-present release",
		"prerelease:ci": "pnpm run ci:index ci:build ci:docs",
		"release:ci": "multi-semantic-release --deps.bump=satisfy",
		"test": "jest --no-cache"
	},
	"lint-staged": {
		"*.{ts,json,yml,yaml}": "eslint --fix --cache"
	},
	"jest": {
		"noStackTrace": true,
		"passWithNoTests": true,
		"preset": "ts-jest",
		"silent": true,
		"testEnvironment": "node"
	},
	"devDependencies": {
		"@snickbit/eslint-config": "1.5.3",
		"@snickbit/readmes": "0.0.27",
		"@snickbit/semantic-release": "1.6.6",
		"@types/jest": "29.5.3",
		"concurrently": "8.2.0",
		"eslint": "8.45.0",
		"husky": "8.0.3",
		"jest": "29.6.1",
		"lint-staged": "13.2.3",
		"multi-semantic-release": "3.0.2",
		"semantic-release": "20.1.3",
		"ts-jest": "29.1.1",
		"tsup": "7.1.0",
		"typescript": "5.1.6"
	},
	"engines": {
		"node": ">= 14.17"
	},
	"readmes": {
		"packages": [
			"packages/*",
			"clis/*"
		],
		"repo": "snickbit/snickbit.js",
		"renameCategories": {
			"packages": "libraries"
		}
	}
}
